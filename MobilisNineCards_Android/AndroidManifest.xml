<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="de.tudresden.inf.rn.mobilis.android.ninecards"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <!-- MXA permissions -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_MULTICAST_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >

        <!-- Own activities and services -->
        <activity
            android:name="de.tudresden.inf.rn.mobilis.android.ninecards.activity.StartActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service
            android:name="de.tudresden.inf.rn.mobilis.android.ninecards.service.BackgroundService"
            android:exported="false" />

        <!-- MXA activities, services and providers -->
        <activity
            android:name="de.tudresden.inf.rn.mobilis.mxa.activities.PreferencesClient"
            android:enabled="true"
            android:exported="false"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="de.tudresden.inf.rn.mobilis.mxa.PREFERENCES" />

                <category android:name="android.intent.category.PREFERENCE" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="de.tudresden.inf.rn.mobilis.mxa.activities.FileChooserActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="de.tudresden.inf.rn.mobilis.mxa.activities.Setup"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="de.tudresden.inf.rn.mobilis.mxa.activities.SetupBasics"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="de.tudresden.inf.rn.mobilis.mxa.activities.SetupComplete"
            android:screenOrientation="portrait" >
        </activity>

        <service
            android:name="de.tudresden.inf.rn.mobilis.mxa.XMPPRemoteService"
            android:enabled="true"
            android:exported="false" >
        </service>

        <provider
            android:name="de.tudresden.inf.rn.mobilis.mxa.provider.RosterProvider"
            android:authorities="de.tudresden.inf.rn.mobilis.mxa.provider.roster.ninecards"
            android:exported="false" >
        </provider>
        <provider
            android:name="de.tudresden.inf.rn.mobilis.mxa.provider.MessageProvider"
            android:authorities="de.tudresden.inf.rn.mobilis.mxa.provider.messages.ninecards"
            android:exported="false" >
        </provider>

        <activity
            android:name="de.tudresden.inf.rn.mobilis.android.ninecards.activity.OpenGamesActivity"
            android:label="@string/title_activity_open_games"
            android:parentActivityName="de.tudresden.inf.rn.mobilis.android.ninecards.activity.StartActivity"
            android:screenOrientation="portrait" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="de.tudresden.inf.rn.mobilis.android.ninecards.activity.StartActivity" />
        </activity>
        <activity
            android:name="de.tudresden.inf.rn.mobilis.android.ninecards.activity.CreateGameActivity"
            android:label="@string/title_activity_create_game"
            android:screenOrientation="portrait"
            android:parentActivityName="de.tudresden.inf.rn.mobilis.android.ninecards.activity.OpenGamesActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="de.tudresden.inf.rn.mobilis.android.ninecards.activity.OpenGamesActivity" />
        </activity>
        <activity
            android:name="de.tudresden.inf.rn.mobilis.android.ninecards.activity.PlayActivity"
            android:label="@string/title_activity_play"
            android:screenOrientation="portrait"
            android:parentActivityName="de.tudresden.inf.rn.mobilis.android.ninecards.activity.OpenGamesActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="de.tudresden.inf.rn.mobilis.android.ninecards.activity.OpenGamesActivity" />
        </activity>
        <activity
            android:name="de.tudresden.inf.rn.mobilis.android.ninecards.activity.InstructionsActivity"
            android:label="@string/title_activity_instructions"
            android:screenOrientation="portrait"
            android:parentActivityName="de.tudresden.inf.rn.mobilis.android.ninecards.activity.StartActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="de.tudresden.inf.rn.mobilis.android.ninecards.activity.StartActivity" />
        </activity>
    </application>

</manifest>